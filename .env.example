# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# n8n Webhooks (replace with your actual endpoints)
REACT_APP_UPLOAD_WEBHOOK=https://your-n8n-instance.com/webhook/upload-resume
REACT_APP_CHAT_WEBHOOK=https://your-n8n-instance.com/webhook/resume-chat

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=resume-analyzer-files

# Optional: Canva API (Enterprise only)
CANVA_API_KEY=your-canva-api-key
CANVA_BRAND_ID=your-brand-id

# Optional: Database for chat sessions
REDIS_URL=redis://localhost:6379
# or
DATABASE_URL=postgresql://user:password@localhost:5432/resume_db

# Application Settings
MAX_FILE_SIZE_MB=15
ALLOWED_FILE_TYPES=pdf,docx
SESSION_TIMEOUT_MINUTES=30
